
<!-- FIXME: make sticky -->
<div id="chords" class="lg:absolute lg:right-12 lg:top-12 mb-12">
  <div class="grid grid-flow-col grid-rows-2 lg:grid-flow-row lg:grid-cols-2 gap-4">
    <% ["guitar", "ukulele"].each do |instrument| %>
      <div>
        <div class="text-xs uppercase lg:text-center text-gray-500 mb-2"><%= instrument %></div>
        <div data-songsheet-target="chords" data-instrument="<%= instrument %>" class="grid grid-flow-col lg:grid-flow-row p-2 bg-gray-100 border rounded-lg overflow-auto shadow">
          <template>
            <div data-controller="chord" class="text-center">
              <div data-chord-target="name"></div>
              <div data-chord-target="diagram" class="inline-block"></div>
            </div>
          </template>
        </div>
      </div>
    <% end %>
  </div>
</div>
